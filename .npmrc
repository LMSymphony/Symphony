auto-install-peers=true
strict-peer-dependencies=false
store-dir=C:\Users\mahmo\.symphony\.pnpm-store
cache-dir=C:\Users\mahmo\.symphony\.pnpm-cache


# Hoist patterns for better performance
hoist=true
hoist-pattern[]=*eslint*
hoist-pattern[]=*prettier*
hoist-pattern[]=*typescript*
hoist-pattern[]=*@types/*
hoist-pattern[]=*vite*
# hoist-pattern[]=*turbo*

# ====================
# PERFORMANCE OPTIMIZATION
# ====================

# Use hard links for better performance
package-import-method=hardlink

# Enable side effects cache
side-effects-cache=true
side-effects-cache-readonly=false


# Network optimization
network-concurrency=16
fetch-retries=3
fetch-retry-factor=2
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# Audit configuration
audit-level=moderate
fund=false

# Enable progress bar
progress=true

# Git hooks
enable-pre-post-scripts=true

# Log level
loglevel=info
